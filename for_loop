#!/bin/bash

### 'for ...' looping demo with items list generated by another command

# find all .JPG files in the directory and subdirectories
# and rename them to .jpg
for f in $(find . -type f -name *.JPG) ; do
  for i in {1..10}; do
    if [[ $f =~ '^P*$' ]]; then continue 2; fi
    mv -i "$f" "${f/.*/.jpg}";
  done 
done

# simple alternative:
#find . -type f -name *.JPG -exec mv ... \;
